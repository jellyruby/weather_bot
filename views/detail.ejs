      <script>

        $('.delete').on('click',function(e){

          var no = e.target.dataset.id;
          var obj = $(this);

          $.ajax({
            url: '/delete',
            method:'delete',
            data: {
              _id: no
            },

        }).done(function(result){
          console.log('성공했어염');
          obj.parent('li').fadeOut();
        }).fail(function(xhr,TextStatus,errThrown){
          console.log('실패');
          console.log(xhr);
          console.log(TextStatus);
          console.log(errThrown);
        })

        });

       
      </script>


    
